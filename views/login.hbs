<!-- Login Page -->
<div class="login-content">
    {{#if status}}
        <div class="alert alert-success">
          <strong>{{status.title}}</strong> {{status.msg}}
        </div>
    {{/if}}
    <div class="login-box">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3 form-box">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h3>Login</h3>
                            <p>Enter your email and password to log on:</p>
                        </div>
                        <div class="form-top-right">
                            <i class="fa fa-lock"></i>
                        </div>
                    </div>
                    <div class="form-bottom">
                        <form role="form" action="/user/login" method="post" class="login-form">
                            <div class="form-group">
                                <label class="sr-only" for="form-email">Email</label>
                                <input type="email" name="username" id="email" placeholder="Email..." class="form-control">
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="form-password">Password</label>
                                <input type="password" name="password" placeholder="Password..." class="form-control" id="password">
                            </div>
                            <button type="submit" class="btn">Sign in!</button>
                            <div class="etc-login-form">
                                <div class="etc-login-left">
                                    <p>Forgot your password? <a href="#">Click here</a></p>
                                </div>
                                <div class="etc-login-right">
                                     <p>Don't have an account? <a href="/user/signup">Sign up here</a></p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>   
        </div>
    </div>
</div>
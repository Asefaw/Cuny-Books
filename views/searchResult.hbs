<div>
{{#if status}}
    <div class="alert alert-success">
      <strong>{{status.title}}</strong> {{status.msg}}
    </div>
{{/if}}
{{#each results}}
	<div class="col-sm-3">
		{{#if this.image}}
			<div class="">
				<img src="{{this.image}}" alt="" />
			</div>
		{{else}}
			<div class="">
				<img src="http://vignette3.wikia.nocookie.net/galaxylife/images/7/7c/Noimage.png/revision/latest?cb=20120622041841" alt="" />
			</div>
		{{/if}}
		<div>Title: {{ this.title }}</div>
		<div>Edition: {{ this.edition}}</div>
		<div>Author: {{ this.author}}</div>
		<div>Owner: {{ this.owner}} </div>
		<div>price: {{ this.price}}</div>
		<div><a href="#" class="btn btn-primary btn-block"> Buy This Book</a></div>
	</div>
{{/each}}
</div>
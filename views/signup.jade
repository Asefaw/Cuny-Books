extends layout

block content
 form(action='signup', method='post')
  h2.form-signin-heading Registration Form
  label.sr-only(for='fullName') Full Name
  input#fullName.form-control(type='text', name='fullName', placeholder='Full Name', required='', autofocus='')
  br
  label.sr-only(for='inputEmail') Email address
  input#inputEmail.form-control(type='email', name='email', placeholder='Email address', required='', autofocus='')
  br
  label.sr-only(for='inputPassword') Password
  input#inputPassword.form-control(type='password', name='password', placeholder='Password', required='')
  br
  label.sr-only(for='confirmPassword') Confirm Password
  input#confirmPassword.form-control(type='password', placeholder='confirmPassword', required='', autofocus='') 
  br
  button.btn.btn-lg.btn-primary.btn-block(type='submit') Register
              
